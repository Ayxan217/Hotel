@model LoginVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Register
            </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label asp-for="UsernameOrEmail" for="exampleInputName1">Username or Email</label>
                    <input asp-for="UsernameOrEmail" type="text" class="form-control" id="exampleInputName1" placeholder="Username Or Email">
                    <span asp-validation-for="UsernameOrEmail"></span>
                </div>
            
            
                <div class="form-group">
                    <label asp-for="Password" for="exampleInputName1">Password</label>
                    <input  asp-for="Password" type="text" class="form-control" id="exampleInputName1" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
      
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>


        </div>

    </div>


</div>