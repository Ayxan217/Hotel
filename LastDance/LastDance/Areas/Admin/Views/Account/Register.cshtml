@model RegisterVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Register
            </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Name" for="exampleInputName1">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" for="exampleInputName1">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" id="exampleInputName1" placeholder="Surname">
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" for="exampleInputName1">Email</label>
                    <input asp-for="Email" type="text" class="form-control" id="exampleInputName1" placeholder="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" for="exampleInputName1">Username</label>
                    <input asp-for="Username" type="text" class="form-control" id="exampleInputName1" placeholder="Username">
                    <span asp-validation-for="Username"></span>
                </div>
                   <div class="form-group">
                    <label asp-for="Password" for="exampleInputName1">Password</label>
                    <input asp-for="Password" type="text" class="form-control" id="exampleInputName1" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" for="exampleInputName1">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>


        </div>

    </div>


</div>